    var memory_test = {
        //targets: [],
        //foils: [],
        stimList: [],
        testLength: 0,
        make_test: function() {
            for (var i=0; i<study_array.length; i++) {
                if (study_array[i] == 1) {
                    //if the value in study array at i is 1, take the left image (aka the 0'th image in the image pair) as the target
                    targets.push(image_pairs[i][0]);
                    foils.push(image_pairs[i][1]);
                }
                else if (study_array[i] == 2) {
                    targets.push(image_pairs[i][1]); //if the value in study array at i is 1, take the left image (aka the 2nd (1st because start counting at 0) image in the image pair)
                    foils.push(image_pairs[i][0]);
                }
            }
            var items=[];
            for(var i=0;i<targets.length;i++) items.push([targets[i],1]);
            for(i=0;i<foils.length;i++) items.push([foils[i],0]);
            this.stimlist = items;
            console.log(this.stimList);
            //this.stimList=shuffle(items);
            // check for too many of same type in a row?
            this.testLength=this.stimList.length;
        },
        get_stim: function(n) {
            if(n<this.testLength) return this.stimList[n][0];
            return('error');
        },
        stim_type: function(n){
            if(n<this.testLength) return this.stimList[n][1];
            return(-1);
        }
    };

    function message(lines) {
        ctx.font = "24px Arial";
        ctx.fillStyle='black';
        ctx.textAlign="center";
        for (var i=0; i<lines.length; i++) {
            ctx.fillText(lines[i], layout.width/2, 100+(i*28));
        }
    }

    /*function show_word(word) {
